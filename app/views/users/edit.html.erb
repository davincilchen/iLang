<% all_languages = Language.all.map { |language| [language.name, language.id] } %>

<%= form_for @user do |f| %>
  <%= f.label :avatar, "Avatar" %>
    <% if @user.avatar? %>
      <%= image_tag @user.avatar, width: '300px' %>
    <% else %>
      <%= image_tag "/300x300.png" %>
    <% end %>
  <%= f.file_field :avatar %>

  <%= f.label :username, "Name" %>
  <%= f.text_field :username %>

  <%= f.label :description, "Intro" %>
  <%= f.text_area :description %>

  <div class="container">
    <div class="col-md-6">
    <%= label_tag 'I want to learn' %>:
    <%= select_tag 'learn_languages', options_for_select(all_languages, @current_learnings), multiple: true, 'class'=>'form form-control', 'style'=>"height:350px"%>
    </div>
    
    <div class="col-md-6">
    <%= label_tag 'I want to teach' %>:
      <%= select_tag "teach_languages", options_for_select(all_languages, @current_teachings), multiple: true, 'class'=>'form form-control', 'style'=>"height:350px"%>
    </div>
  </div>
  <%= submit_tag 'Update', class: "btn btn-default"%>
<% end %>

