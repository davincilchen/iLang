<%= form_for [@user] do |f| %>
  <%= f.label :username, "Name" %>
  <%= f.text_field :username, class: "form-control" %>

  <%= f.label :description, "Intro" %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :avatar, "Photo" %>
    <% if @user.avatar? %>
      <%= image_tag @user.avatar, width: '300px' %>
    <% else %>
      <%= image_tag("300x300.png") %>
    <% end %>
  <%= f.file_field :avatar %>

  <br>


<%= f.submit class: "btn btn-primary" %>
