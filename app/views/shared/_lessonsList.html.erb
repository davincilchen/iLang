<h3>我的課程列表</h3>
<table class="table table-striped">
    <tr>
        <th><%= sortable "title" %></th>
        <th><%= sortable("created_at") %></th>
        <th><%= "教師" %></th>
        <th><%= "學生" %></th>
        <th><%= "語言" %></th>
        <th><%= "狀態" %></th>
        <th><%= "操作" %></th>
        <th><%= "複習" %></th>
    </tr>
    <% lessons.each do |lesson| %>
        <tr>
            <td><%= lesson.title %></td>
            <td><%= lesson.created_at.strftime("%B %e, %Y") %></td>
            <% if lesson.teacher != current_user %>
                <td><%= link_to lesson.teacher.username, user_path(lesson.teacher) %></td>
                <td><%= lesson.student.username %></td>
            <% else %>
                <td><%= lesson.teacher.username %></td>
                <td><%= link_to lesson.student.username, user_path(lesson.student) %></td>
            <% end %>
            <td><%= lesson.language.name %></td>
            <% if lesson.status == true %>
                <td><%= "進行中"%></td>
            <% else %>
                <td><%= "已完成"%></td>
            <% end %>
            <td><%= link_to lesson_path(lesson) do %><i class="glyphicon glyphicon-play"><% end %></td>
            <td>
                <% if lesson.student == current_user%>
                    <%= link_to vocab_path(lesson) do %><i class="glyphicon glyphicon-education"><% end %>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
