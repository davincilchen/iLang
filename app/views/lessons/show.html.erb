<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @lesson.status == true %>
      <h2>Teacher <%= @lesson.teacher.username %></h2>
      <h2>Student <%= @lesson.student.username %></h2>
      <% end %>
      <h2>Lesson Title: <%= @lesson.title %></h2>
      <div id="PadBasic"></div>
      <%= link_to 'Complete Lesson', lesson_path(@lesson), method: :patch, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<script type="text/javascript">
      // 利用etherpad.js的pad功能建立一個etherpad
$('#PadBasic').pad({'padId': '<%= @lesson.padID %>'}); // sets the pad id and puts the pad in the div
</script>
